{
  "manifest_version": 3,
  "name": "이미지 일괄 다운로드",
  "version": "1.0.0",
  "description": "페이지의 모든 이미지를 순서대로 번호를 붙여 다운로드합니다.",
  "permissions": ["downloads", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "이미지 다운로드",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

